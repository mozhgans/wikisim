export sol=http://localhost:8983/solr
export index=enwiki20160305

echo "Imporintg Started..."
date

cd chunks

curl -s -X post -H 'Content-Type: application/json' $sol/$index/update?commit=true -d '
{
"delete": { "query":"*:*" }
}
'

for file in *; do
  echo -n "${file}:  "

  took=$(curl -s -X post -H 'Content-Type: application/json' $sol/$index/update?commit=true -d @$file)
  printf '%s\n' $took
  #[ "x$took" = "x" ] || rm $file
done

echo "done"
date
